@using WebApplication1.Models;
@model WebApplication1.Models.VM.uor
@{
    List<Drzava> lista = (List<Drzava>)ViewData["drzave"];
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}
 

<center>
    <h1>Prikaz Država</h1>
    <div id="dugmad">
        <div id="dodaj">
            <a href="/Admin/Drzava/Unos?u=@Model.userId&o=@Model.organisationId&r=@Model.roleId" class="btn btn-success">Dodaj novu</a>
        </div>
    </div>
    <table class="table">
        <thead>
        <th>ID</th>
        <th>Šifra</th>
        <th>Naziv</th>
        </thead>
        <tbody>
            @foreach (var x in lista)
            {
                <tr>
                    <td>@x.Drazava_ID</td>
                    <td>@x.Sifra</td>
                    <td>@x.Naziv</td>
                    <td><a class="btn btn-danger" href="/Admin/Drzava/Ukloni?id=@x.Drazava_ID&u=@Model.userId&o=@Model.organisationId&r=@Model.roleId">Ukloni</a></td>
                </tr>
            }
        </tbody>
    </table>
</center>