@using WebApplication1.Models;
@{
    List<Uloge> lista = (List<Uloge>)ViewData["prikazUloga"];

}

<center>
    <h1>Prikaz Uloga</h1>
    <div id="dugmad">
        <div id="dodaj">
            <a class="btn btn-success" href="/Admin/Uloge/Unos">Dodaj novu</a>
        </div>
    </div>
    <table class="table">
        <thead>
        <th>ID</th>
        <th>Šifra</th>
        <th>Naziv</th>
        <th>Opis</th>
        <th>Akcija</th>
        </thead>
        <tbody>
            @foreach (var x in lista)
            {
                <tr>
                    <td>@x.Uloge_ID</td>
                    <td>@x.Sifra</td>
                    <td>@x.Naziv</td>
                    <td>@x.Opis</td>
                    <td><a type="submit" class=" btn btn-danger" href="/Admin/Uloge/Obrisi?id=@x.Uloge_ID">Obriši</a></td>
                </tr>
            }
        </tbody>
    </table>
</center>