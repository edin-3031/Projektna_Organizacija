<center>
    <h1>Unos Korisnika - Organizacione Jedinice</h1>
    <form method="post" action="/Admin/KorisnikOrg/UnosSnimi">

        <input name="u" value="@id.userId" hidden="hidden"/>
        <input name="o" value="@id.organisationId" hidden="hidden"/>
        <input name="r" value="@id.roleId" hidden="hidden"/>
        <table>
            <tr>
                <td>
                    <label>
                        Korisnik
                    </label>
                </td>
                <td>
                    <select name="korisnik">
                        <option>---Odaberi---</option>
                        @foreach (var x in lista_korisnici)
                        {
                            <option value="@x.Korisnici_ID">@(x.Ime + " " + x.Prezime)</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td>
                    <label>
                        Organizaciona jedinica
                    </label>
                </td>
                <td>
                    <select name="organizacionaJedinica">
                        <option>---Odaberi---</option>
                        @foreach (var x in lista_org_jed)
                        {
                            <option value="@x.OrganizacionaJedinica_ID">@x.Naziv</option>
                        }
                    </select>
                </td>
            </tr>
        </table>
        <button class="btn btn-success" type="submit">Dodaj nove</button>
    </form>
</center>