</div>
<center>
    <h1>Uređivanje Koirsnika - Organizacione Jedinice</h1>
    <form method="post" action="/SuperAdmin/KorisnikOrg/UrediSnimi">
        <input hidden="hidden" name="u" value="@id.userId" />
        <input hidden="hidden" name="o" value="@id.organisationId" />
        <input hidden="hidden" name="r" value="@id.roleId" />
        <input hidden="hidden" name="k_o_id" value="@k_o.Korisnici_OrganizacionaJedinica_ID" />
        <table>
            <tr>
                <td>
                    <label>Korisnik</label>
                </td>
                <td>
                    <select name="korisnik">
                        <option value="@k_o.Korisnici_FK">@(k_o.korisnici.Ime.ToString()+" "+k_o.korisnici.Prezime.ToString())</option>
                        @foreach (var x in k)
                        {
                            <option value="@x.Korisnici_ID">@(x.Ime.ToString()+" "+x.Prezime.ToString())</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td>
                    <label>Organizaciona jedinica</label>
                </td>
                <td>
                    <select name="org_jed">
                        <option value="@k_o.Korisnici_OrganizacionaJedinica_ID">@k_o.organizacionaJedinica.Naziv</option>
                        @foreach (var x in org_jed)
                        {
                            <option value="@x.OrganizacionaJedinica_ID">@x.Naziv</option>
                        }
                    </select>
                </td>
            </tr>
        </table>
        <button type="submit" class="btn btn-primary">Snimi</button>
    </form>
</center>