@using WebApplication1.Models;
@using WebApplication1.Models.VM;
@model WebApplication1.Models.Organizacija
@{
    Layout = "~/Views/Shared/_Layout_admin.cshtml";

    Organizacija org = (Organizacija)ViewData["organizacija_uredi"];

    List<PTT> lista_ptt = (List<PTT>)ViewData["ptt"];
    List<Drzava> lista_drzava = (List<Drzava>)ViewData["drzava"];
}
<center>
    <h1>Uredi Organizaciju</h1>
    <form action="/SuperAdmin/Organizacija/UrediSnimi" enctype="multipart/form-data" method="post">
        <input hidden="hidden" name="org_id" value="@org.Organizacija_ID"/>
        <table>
            <tr>
                <td><label>PTT</label></td>
                <td>
                    <select name="ptt">
                        <option value="@org.PTT_FK" disabled="disabled">@org.ptt.Naziv</option>
                        @foreach (var x in lista_ptt)
                        {
                            <option value="@x.PTT_ID">@x.Naziv</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td><label>Država</label></td>
                <td>
                    <select name="drzava">
                        <option value="@org.Drzava_FK" disabled="disabled">@org.drzava.Naziv</option>
                        @foreach (var x in lista_drzava)
                        {
                            <option value="@x.Drzava_ID">@x.Naziv</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td><label>Šifra</label></td>
                <td><input name="sifra" type="text" value="@org.Sifra"/></td>
            </tr>
            <tr>
                <td><label>Naziv</label></td>
                <td><input name="naziv" type="text" value="@org.Naziv"/></td>
            </tr>
            <tr>
                <td><label>Adresa</label></td>
                <td><input name="adresa" type="text" value="@org.Adresa"/></td>
            </tr>
            <tr>
                <td><label>Slika</label></td>
                <td>
                    @*<label style="border:15px solid green;" class="file-label">Browse...</label>*@
                    <input style="border:0px;" class="form-control file-input" name="slika" type="file" />
                </td>
            </tr>
            <tr>
                <td><label>Logo</label></td>
                <td>
                    @*<label style="border:15px solid green;" class="file-label">Browse...</label>*@
                    <input style="border:0px;" class="form-control file-input" name="logo" type="file" />
                </td>
            </tr>
        </table>
        <button type="submit" class="btn btn-primary">Spremi</button>
    </form>
</center>