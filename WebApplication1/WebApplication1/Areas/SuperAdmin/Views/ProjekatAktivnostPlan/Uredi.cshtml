@using WebApplication1.Models;
@using WebApplication1.Models.VM;
@{
    List<ProjekatPlanVM> lista_proj_plan = (List<ProjekatPlanVM>)ViewData["p_p"];
    ProjekatAktivnostPlan p_a = (ProjekatAktivnostPlan)ViewData["proj_aktiv"];

    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}
<center>
    <h1>Uređivanje aktivnosti projekta</h1>
    <form method="post" action="/SuperAdmin/ProjekatAktivnostPlan/UrediSnimi">
        <input name="id" value="@p_a.ProjekatAktivnostPlan_ID" hidden="hidden"/>
        <table>
            <tr>
                <td>
                    <label>
                        Naziv
                    </label>
                </td>
                <td>
                    <input type="text" name="naziv" value="@p_a.Naziv" />
                </td>
            </tr>
            <tr>
                <td>
                    <label>
                        Šifra
                    </label>
                </td>
                <td>
                    <input type="text" name="sifra" value="@p_a.Sifra" />
                </td>
            </tr>
            <tr>
                <td>
                    <label>
                        Projekat
                    </label>
                </td>
                <td>
                    <select name="proj_plan_id">
                        <option value="@p_a.ProjekatPlan_FK">@p_a.projekatPlan.Naziv</option>
                        @foreach (var x in lista_proj_plan)
                        {
                            <option value="@x.ProjekatPlan_ID">@x.Naziv (@x.OrganizacionaJedinica_naziv)</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td>
                    <label>
                        Datum od
                    </label>
                </td>
                <td>
                    <input type="datetime" name="OD" value="@p_a.DatumOd" />
                </td>
            </tr>
            <tr>
                <td>
                    <label>
                        Naziv
                    </label>
                </td>
                <td>
                    <input type="datetime" name="DO" value="@p_a.DatumDo" />
                </td>
            </tr>
            <tr>
                <td>
                    <label>
                        Jedinica mjere
                    </label>
                </td>
                <td>
                    <input type="text" name="jedinicaMjere" value="@p_a.JedinicaMjere" />
                </td>
            </tr>
            <tr>
                <td>
                    <label>
                        Količina
                    </label>
                </td>
                <td>
                    <input type="text" name="kolicina" value="@p_a.Kolicina" />
                </td>
            </tr>

        </table>

        <button class="btn btn-primary" type="submit">Snimi</button>
    </form>
</center>