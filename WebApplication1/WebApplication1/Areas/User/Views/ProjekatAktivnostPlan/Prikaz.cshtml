@using WebApplication1.Models;
@using WebApplication1.Models.VM;
@{
    List<ProjekatAktivnostPlan> lista = (List<ProjekatAktivnostPlan>)ViewData["pro_aktiv_plan"];

    Layout = "~/Views/Shared/_Layout_user.cshtml";

    byte[] pic = (byte[])ViewData["logo"];
    var base64 = Convert.ToBase64String(pic);
    var imgsrc = string.Format("data:image/gif;base64,{0}", base64);

}
<center>
    <div id="zaglavlje" style="width:100%">
        <h1 style="position:relative; display:inline;">Prikaz Projektnih aktivnosti</h1>
        <img style="height:7vw; width:7vw; position:relative; float:right; display:inline;" src="@imgsrc" />
    </div>
    <div id="dugmad">
        <div id="dodaj">
            <a class="btn btn-success" href="/User/ProjekatAktivnostPlan/Unos">Dodaj novi</a>
        </div>
        <div id="print_excel">
            <a href="/User/ProjekatAktivnostPlan/Excel" class="btn btn-info">Export to Excel</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <th>ID</th>
            <th>Projekat plan</th>
            <th>Šifra</th>
            <th>Naziv</th>
            <th>Datum od</th>
            <th>Datum do</th>
            <th>Jedinica mjere</th>
            <th>Količina</th>
            <th>Akcija</th>
        </thead>
        <tbody>
            @foreach (var x in lista)
            {
                <tr>
                    <td>@x.ProjekatAktivnostPlan_ID</td>
                    <td>@x.projekatPlan.Naziv</td>
                    <td>@x.Sifra</td>
                    <td>@x.Naziv</td>
                    <td>@(x.DatumOd.Date.Day+"."+ x.DatumOd.Date.Month + "." + x.DatumOd.Date.Year + ".")</td>
                    <td>@(x.DatumDo.Date.Day+"."+ x.DatumDo.Date.Month + "." + x.DatumDo.Date.Year + ".")</td>
                    <td>@x.JedinicaMjere</td>
                    <td>@x.Kolicina</td>
                    <td>
                        <a class="btn btn-primary" href="/User/ProjekatAktivnostPlan/Uredi?id=@x.ProjekatAktivnostPlan_ID">Uredi</a>
                        <a id="ukloni_@x.ProjekatAktivnostPlan_ID" class="btn btn-danger" style="color:white">Ukloni</a>
                        <span style="color:black; position:absolute;float:right;margin-left:1%;" id="poruka_@x.ProjekatAktivnostPlan_ID">Sigurni? <a href="/User/ProjekatAktivnostPlan/Ukloni?id=@x.ProjekatAktivnostPlan_ID" style="color:black; font-weight:bold;">Da</a> <a id="no_@x.ProjekatAktivnostPlan_ID" style="color:black;cursor:pointer; font-weight:bold;">Ne</a></span>
                        <script>
                            $("#poruka_@x.ProjekatAktivnostPlan_ID").hide();

                            $("#ukloni_@x.ProjekatAktivnostPlan_ID").click(function () {

                                $("#poruka_@x.ProjekatAktivnostPlan_ID").slideDown();
                            });

                            $("#no_@x.ProjekatAktivnostPlan_ID").click(function () {
                                $("#poruka_@x.ProjekatAktivnostPlan_ID").slideUp();
                            });
                        </script>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</center>