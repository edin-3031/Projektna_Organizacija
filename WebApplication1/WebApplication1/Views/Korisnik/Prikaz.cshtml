@{
    List<Korisnici> lista = (List<Korisnici>)ViewData["korisnik"];
}

<center>
    <table class="table">
        <thead>
        <th>ID</th>
        <th>Uloga</th>
        <th>Šifra</th>
        <th>Ime</th>
        <th>Prezime</th>
        <th>Telefon</th>
        <th>Mail</th>
        <th>Lozinka</th>
        <th>Akcija</th>
        </thead>
        <tbody>
            @foreach (var x in lista)
            {
                <tr>
                    <td>@x.Korisnici_ID</td>
                    <td>@x.uloge.Naziv</td>
                    <td>@x.Sifra</td>
                    <td>@x.Ime</td>
                    <td>@x.Prezime</td>
                    <td>@x.Telefon</td>
                    <td>@x.Mail</td>
                    <td>@x.Lozinka</td>
                    <td><a class="btn btn-danger" href="/Korisnik/Ukloni?id=@x.Korisnici_ID">Ukloni</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Korisnik/Unos" class="btn btn-success">Dodaj novog</a>
</center>