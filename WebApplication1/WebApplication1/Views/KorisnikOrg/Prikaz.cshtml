@{
    List<Korisnici_OrganizacionaJedinica> lista = (List<Korisnici_OrganizacionaJedinica>)ViewData["kor_org_jed"];
}
<center>
    <table class="table">
        <thead>
            <th>ID</th>
            <th>Korisnik</th>
            <th>Organizaciona jedinica</th>
            <th>Akcija</th>
        </thead>
        @foreach(var x in lista)
        {
            <tr>
                <td>@x.Korisnici_OrganizacionaJedinica_ID</td>
                <td>@(x.korisnici.Ime + " " + x.korisnici.Prezime)</td>
                <td>@x.organizacionaJedinica.Naziv</td>
                <td><a class="btn btn-danger" href="/KorisnikOrg/Ukloni?id=@x.Korisnici_OrganizacionaJedinica_ID">Ukloni</a></td>
            </tr>
        }
    </table>
    <a class="btn btn-success" href="/KorisnikOrg/Unos">Unesi novo</a>
</center>