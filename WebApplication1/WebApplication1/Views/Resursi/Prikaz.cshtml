@{
    List<Resursi> lista = (List<Resursi>)ViewData["resursi"];
}
<center>
    <h1>Prikaz Resursa</h1>
    <div id="dugmad">
        <div id="dodaj">
            <a class="btn btn-success" href="/Resursi/Unos">Dodaj novi</a>
        </div>
    </div>
    <table class="table">
        <thead>
        <th>ID</th>
        <th>Naziv</th>
        <th>Akcija</th>
        </thead>
        <tbody>
            @foreach (var x in lista)
            {
                <tr>
                    <td>@x.Resursi_ID</td>
                    <td>@x.Naziv</td>
                    <td><a href="/Resursi/Ukloni?id=@x.Resursi_ID" class="btn btn-danger">Ukloni</a></td>
                </tr>
            }
        </tbody>
    </table>
</center>